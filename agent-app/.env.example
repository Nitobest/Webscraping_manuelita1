# ============================================================================
# VARIABLES DE ENTORNO - AGENT-APP
# ============================================================================
# Copia este archivo a .env y configura tus valores

# OpenAI / LLM Configuration
OPENAI_API_KEY=your-openai-api-key
# Google Gemini (alternativo)
GOOGLE_API_KEY=tu-google-api-key

# Ollama (si usas modelos locales)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen:4b

# Data Configuration
DATA_DIR=../data/raw/processed
VECTORDB_DIR=./vectordb
STRUCTURED_DATA_FILE=tools/data/faq_structured.json

# LLM Parameters
LLM_MODEL="GPT-4o mini"
LLM_TEMPERATURE=0.05
LLM_TOP_K=4
LLM_MAX_TOKENS=500

# Streaming Configuration
STREAMING_ENABLED=true
STREAMING_SPEED_MS=50
STREAMING_ICON=üê¢

# Memory Configuration
MEMORY_MAX_TOKENS=20000
MEMORY_MAX_TURNS=50
MEMORY_FIFO_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text


# LangSmith Configuration (Optional - For Observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=manuelita-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# App Configuration
APP_TITLE=Asistente Inteligente Manuelita
FAQ_MAX_QUESTIONS=4
DEBUG=false
